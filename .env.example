# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Site URL (for OAuth redirects)
# Local: http://localhost:3000
# Production: https://your-railway-domain.up.railway.app
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cloudinary CDN (FREE tier: 25GB/month, 25K transformations)
# Sign up at: https://cloudinary.com (no credit card required)
# Get your cloud name from: https://console.cloudinary.com/
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn

# Optional: File Upload
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# ============================================================================
# Content Crawler Configuration - 100% FREE APIs
# ============================================================================

# OpenWeatherMap API (Free tier: 1,000 calls/day)
# Get your API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# Unsplash API (Free tier: 50 requests/hour) - OPTIONAL
# Get your API key at: https://unsplash.com/developers
# If not set, will use fallback image URLs (no API key needed)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# OpenStreetMap - NO API KEY NEEDED (100% free, unlimited)
# Wikipedia - NO API KEY NEEDED (100% free, unlimited)

# Crawler Settings
CRAWLER_MAX_REQUESTS=100
CRAWLER_TIMEOUT=30000
CRAWLER_MAX_CONCURRENCY=5

# Cron Job Secret (for  do-not-use-this-anymore-no-vercel-we-use-railway-now Cron Jobs)
# Generate a random string: openssl rand -base64 32
CRON_SECRET=your_random_secret

# Admin Secret (for manual crawler triggers)
ADMIN_SECRET=your_admin_secret

# ============================================================================
# Routing Service Configuration - FREE APIs
# ============================================================================

# OpenRouteService API (Free tier: 2,000 requests/day)
# Get your API key at: https://openrouteservice.org/dev/#/signup
# Provides real road routing for car, bike, walk, wheelchair
OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key

# OSRM Demo Server - NO API KEY NEEDED (100% free, unlimited)
# Used as automatic fallback if OpenRouteService is unavailable
# Public demo server: https://router.project-osrm.org


# Google AdSense Publisher ID
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT_ID=ca-pub-5985120367077865
